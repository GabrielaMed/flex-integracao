generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Veiculo {
  id                  Int      @id @default(autoincrement())
  placa               String
  renavam             String?
  ativo               Boolean  @default(true)
  cadastro_verificado Boolean  @default(false)
  dt_criacao          DateTime
  dt_atualizacao      DateTime
  id_vehicle_customer Int?

  @@map("veiculos")
}

model Proprietario {
  id             Int      @id @default(autoincrement())
  nome_prop      String
  cpf_cnpj_prop  String
  ativo          Boolean  @default(true)
  dt_criacao     DateTime
  dt_atualizacao DateTime
  cod_prop       Int

  @@map("proprietarios")
}

model Motorista {
  id              Int       @id @default(autoincrement())
  nome_mot        String
  cpf_mot         String
  cnh_mot         String?
  dt_emissao_cnh  DateTime?
  dt_primeira_cnh DateTime?
  dt_nascimento   DateTime?
  ativo           Boolean   @default(true)
  dt_criacao      DateTime
  dt_atualizacao  DateTime
  cod_mot         Int

  @@map("motoristas")
}

model Viagem {
  ID               Int       @id @default(autoincrement())
  IDCLIENT         Int
  NUMERO_CLIENTE   String
  DT_VIAGEM        DateTime
  MERCADORIA       String
  CIDADE_ORIGEM    String
  CIDADE_DESTINO   String
  IDMOTORISTA      Int
  IDPROPRIETARIO   Int
  IDVEICULO        Int
  CARRETA1         String?
  CARRETA2         String?
  CARRETA3         String?
  CARRETA4         String?
  VIAGEM_CANCELADO String
  DT_CANCELAMENTO  DateTime?
  DT_CLIENTE       DateTime
  DT_CRIACAO       DateTime
  DT_ATUALIZACAO   DateTime

  @@map("viagens")
}

model IntegracaoSankhya {
  id         Int      @id @default(autoincrement())
  last_sync  DateTime
  type_sync  String
  page       Int
  table_name String
  state      String

  @@map("integracao_sankhya")
}
